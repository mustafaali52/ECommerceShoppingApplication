@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 text-end">
            <a asp-asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle">&nbsp; Create New Category</i> 
            </a>
        </div>
    </div>
    <br />
    <partial name="_Notification" />
    <br />
    <h2 class="text-primary">List of Categories</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr class="table-active">
                    <td>@category.CategoryName</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id = "@category.categoryId"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@category.categoryId"><i class="bi bi-trash-fill"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
